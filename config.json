{
  "locals": {
    "url": "http://businessin21stcentury.com",
    "author": "Erwin van der Koogh",
    "name": "Business in the 21st Century",
    "description": "How to not just survive, but thrive in the 21 century"
  },
  "plugins": [
    "wintersmith-nunjucks",
    "./plugins/contentHelpers.js",
    "./plugins/paginator.coffee"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 4
  },
  "nunjucks": {
    "filterdir": "filters",
    "filters": ["absolutize"]
  }

}
